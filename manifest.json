{
  "manifest_version": 3,
  "name": "Media previewer",
  "author": "Pythack",
  "version": "1.0.3",
  "description": "Preview media by hovering over its URL",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["previewer.js"],
      "css": ["previewer.css"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "permissions": ["storage"],
  "action": {
    "default_icon": "iconactive.png",
    "default_title": "Media previewer",
    "browser_style": true
  }
}
